{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Shopping cart API"
  },
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "definitions": {
    "loginRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "format": "password"
        }
      }
    },
    "loginResponse": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string"
        }
      }
    },
    "userRequest": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "format": "password"
        }
      }
    },
    "userResponse": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      }
    },
    "cartRequest": {
      "type": "object",
      "properties": {
        "buyer_email": {
          "type": "string"
        },
        "cart_items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/cart_item"
          }
        }
      }
    },
    "cartResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "status": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "buyer": {
          "$ref": "#/definitions/buyer"
        },
        "cart_items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/cart_item"
          }
        }
      }
    },
    "cartRequestUpdate": {
      "type": "object",
      "properties": {
        "cart_items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/cart_item"
          }
        }
      }
    },
    "buyer": {
      "type": "object",
      "$ref": "#/definitions/userResponse"
    },
    "cart_item": {
      "type": "object",
      "properties": {
        "variant_id": {
          "type": "integer"
        },
        "quantity": {
          "type": "integer"
        }
      }
    },
    "checkoutRequest": {
      "type": "object",
      "properties": {
        "cart_id": {
          "type": "integer"
        }
      }
    },
    "error_response": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        },
        "causes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/authentication/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "User's login. Generates an access token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/loginRequest"
              }
            }
          }
        },
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Logged in",
            "schema": {
              "$ref": "#/definitions/loginResponse"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "500": {
            "description": "Internal error",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/userRequest"
              }
            }
          }
        },
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "User created",
            "schema": {
              "$ref": "#/definitions/userResponse"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "500": {
            "description": "Internal error",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      }
    },
    "/carts": {
      "post": {
        "tags": [
          "Cart"
        ],
        "summary": "Create cart",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/cartRequest"
              }
            }
          }
        },
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Cart created",
            "schema": {
              "$ref": "#/definitions/cartResponse"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "500": {
            "description": "Internal error",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      }
    },
    "/carts/{cart_id}": {
      "get": {
        "tags": [
          "Cart"
        ],
        "summary": "Get cart by id",
        "parameters": [
          {
            "name": "cart_id",
            "in": "path",
            "required": true,
            "type": "number"
          }
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Cart info",
            "schema": {
              "$ref": "#/definitions/cartResponse"
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "500": {
            "description": "Internal error",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Cart"
        ],
        "summary": "Update cart",
        "parameters": [
          {
            "name": "cart_id",
            "in": "path",
            "required": true,
            "type": "number"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/cartRequestUpdate"
              }
            }
          }
        },
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Cart updated",
            "schema": {
              "$ref": "#/definitions/cartResponse"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "500": {
            "description": "Internal error",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Cart"
        ],
        "summary": "Delete cart by id",
        "parameters": [
          {
            "name": "cart_id",
            "in": "path",
            "required": true,
            "type": "number"
          }
        ],
        "consumes": [
          "application/json"
        ],
        "responses": {
          "204": {
            "description": "Cart deleted"
          },
          "404": {
            "description": "Not found",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "500": {
            "description": "Internal error",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      }
    },
    "/checkout": {
      "post": {
        "tags": [
          "Checkout"
        ],
        "summary": "Process an existing cart and generates an order",
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/checkoutRequest"
              }
            }
          }
        },
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Order created",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          },
          "500": {
            "description": "Internal error",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      }
    }
  }
}